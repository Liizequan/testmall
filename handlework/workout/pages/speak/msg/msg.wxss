page{
  background: #fff;
}
.item{
  display: flex;
  padding:32rpx;
}
.head{
  width:88rpx;
  height: 88rpx;
  background:#ccc;
  border-radius: 50%;
  margin-right: 32rpx;
}
.right{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  flex:1;
}
.righttop{
  width: 100%;
  font-size: 32rpx;
  color:#333;
  display: flex;
  justify-content: space-between;
}
.rightbottom{
  font-size: 28rpx;
  color:#999;
}
.date{
  font-size: 24rpx;
  color:#999;
}
.who{
  font-weight: bold;
}
.reddot{
  position:relative;
}
.reddot::after{
  content: '';
  width:12rpx;
  height: 12rpx;
  border-radius: 50%;
  background:red;
  position:absolute;
  top:0;
  right:-12rpx;
}
.infobtn[plain]{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  z-index:99;
  border:none;
}