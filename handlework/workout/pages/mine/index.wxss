page{
  background:rgba(245,245,245,1);
}
.info{
  display: flex;
  background:#fff;
  justify-content: space-between;
  padding:40rpx 30rpx;
}
.name{
  font-size: 32rpx;
  color:#333;
  margin-bottom:8rpx;
  font-weight: bold;
}
.detail{
  color:#999;
  font-size: 28rpx;
}
.detail text{
  margin-right:10rpx;
}
.head{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
}
.first{
  margin-top:10rpx;
}
.item{
  background: #fff;
  padding-left:40rpx;
}
.main{
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(229,229,229,1);
  height: 100%;
  padding: 30rpx 30px 30rpx 0;
}
.icon{
  width:36rpx;
  height: 36rpx;
  margin-right:30rpx;
}
.itemName{
  font-size: 28rpx;
  color:#333;
}
.more{
  position:absolute;
  right:30rpx;
}
.moreIcon{
  width:20rpx;
  height: 20rpx;
  border-top:2px solid #C7C7CC;
  border-right: 2px solid #C7C7CC;
  transform: rotate(45deg);
}
.last{
  border: none;
}
.logBtn{
  background: red;
  height: 180rpx;
  width:100%;
  position: absolute;
  top:0;
  left:0;
}
.logBtn[plain]{
  border:none;
}
.logout{
  width:80%;
  color:rgba(229,229,229,1);
  border-radius: 6rpx;
  border: 2rpx solid rgba(229,229,229,1);
  position: fixed;
  bottom:50rpx;
  left:50%;
  transform: translateX(-50%);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}