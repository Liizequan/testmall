page{
  background: rgba(245,245,245,1);
}
.container{
  background:#fff;
  margin-bottom:10rpx;
}
.iTitle{
  font-size: 32rpx;
  color: #333;
  /* border-left: 2px solid #08f; */
  padding-left: 8rpx;
  display: flex;
  justify-content: space-between;
}
.what{
  position:relative;
}
.what::after{
  content:'';
  width:4rpx;
  height: 28rpx;
  background: #08f;
  position: absolute;
  left:-12rpx;
  top:50%;
  transform: translateY(-50%);
}
.btn{
  color:#0088FF;
  font-size: 28rpx;
}
.info{
  display: flex;
  justify-content: space-between;
  padding:40rpx 0;
}
.name{
  font-size: 32rpx;
  color:#333;
  margin-bottom:8rpx;
}
.detail{
  color:#999;
  font-size: 28rpx;
}
.detail text{
  margin-right:10rpx;
}
.head{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
}
.concat{
  font-size: 28rpx;
  color:#333;
  font-weight: normal;
}
.concat:nth-of-type(2){
  margin-top:4rpx !important;
}
.person{
  color:#5E5E5E;
  font-size: 28rpx;
}
.lineOne{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color:#5e5e5e;
}
.cash{
  color:#0088FF;
}
.lineTwo{
  font-size: 24rpx;
  color:#999;
  margin-top:18rpx;
