.top {
  display: flex;
  justify-content: space-between;
}

.post {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.cash {
  color: #08f;
  font-size: 32rpx;
}

.detail {
  display: flex;
  font-size: 24rpx;
  color: #999;
  flex-wrap: wrap;
}

.detail view {
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 6rpx;
  margin-right: 16rpx;
  padding: 6rpx 24rpx;
  margin-bottom:10rpx;
}

.location {
  color: #999;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 1);
  margin: 16rpx 0;
}

.location text {
  margin-right: 16rpx;
}

.comLeft {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.company {
  display: flex;
  justify-content: space-between;
  margin-top: 76rpx;
}

.comName {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.comDetail {
  font-size: 28rpx;
  color: #999;
}

.comLogo {
  height: 100rpx;
  width: 100rpx;
}

.section {
  margin-top: 82rpx;
}

.secTitle {
  font-size: 32rpx;
  color: #333;
  /* border-left: 2px solid #08f; */
  /* padding-left: 8rpx; */
  position:relative;
}
.secTitle::after{
  content:'';
  width:4rpx;
  height: 28rpx;
  background: #08f;
  position: absolute;
  left:-12rpx;
  top:50%;
  transform: translateY(-50%);
}
.btns text {
  background: #08f;
  padding: 10rpx 46rpx;
  color: #fff;
  border-radius: 6rpx;
  margin-right: 32rpx;
}

.btns {
  margin-top: 40rpx;
}

.preSign {
  display: flex;
  height: 98rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}

.share, .like {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  font-size: 20rpx;
  color: #999;
  justify-content: space-around;
}

.share {
  position: relative;
}

.shareBtn[plain] {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: none;
  border: none;
}

.now {
  flex: 3;
  background: #08f;
  color: #fff;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
}

.preSign image {
  width: 44rpx;
  height: 44rpx;
}

.scrollView {
  height: 352rpx;
  white-space: nowrap;
  margin: 30rpx 0 36rpx;
}

.scrollView view {
  height: 352rpx;
  width: 90%;
  margin-right: 20rpx;
  position: relative;
  display: inline-block;
  border-radius: 10rpx;
  overflow: hidden;
}
.scrollView view:nth-last-of-type(1){
  margin-right:0;
}
.scrollView image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
}

.address {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  align-items: center;
}

.address text {
  font-size: 28rpx;
  color: #5e5e5e;
}

.container {
  margin-bottom: 98rpx;
  box-sizing: border-box;
}

.desc {
  font-size: 28rpx;
  color: #5e5e5e;
  margin-top: 40rpx;
}

.iLike {
  color: #08f;
}
