.parent {
  display: flex;
  height: 100rpx;
  background: rgba(250, 250, 250, 1);
}

.item {
  width: 25%;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-right: 1rpx solid rgba(204, 204, 204, 1);
  padding: 0 20rpx;
}

.item:nth-last-of-type(1) {
  border: none;
}

.item view {
  width: 16rpx;
  height: 16rpx;
  border-top: 1px solid #333;
  border-right: 1px solid #333;
  transform: rotate(135deg);
  transition: all ease 500ms;
}

.selContain {
  position: relative;
  z-index: 2;
}

.mask {
  position: absolute;
  top: 100rpx;
  z-index: 999;
  width: 100%;
}

.firstItem {
  background: #fff;
  z-index: 1000;
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding-bottom: 30rpx;
}

.firstItem>view {
  padding: 40rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
}

.firstConf {
  display: block;
  color: #fff;
  background: #08f;
  padding: 20rpx 0;
  text-align: center;
  margin: 30rpx;
  margin-bottom: 0;
  border-radius: 6rpx;
}

.thirdItem text {
  height: 64rpx;
  font-size: 28rpx;
}

.thirdItem {
  background: #fff;
  z-index: 1000;
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 32rpx;
  box-sizing: border-box;
}

.btns {
  margin-bottom: 48rpx;
  display: flex;
  justify-content: space-between;
}

.atMe {
  background: #08f;
  color: #fff;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
}

.notMe {
  color: #333;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
}

.thirdConf {
  height: 80rpx !important;
  color: #fff;
  background: #08f;
  display: block;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.secItem {
  background: #fff;
  z-index: 1000;
  width: 100%;
  font-size: 28rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.current {
  display: flex;
}

.allSel {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: rgba(0, 136, 255, 1);
  opacity: 1;
  border-radius: 6rpx;
  color: #fff;
  min-width: 144rpx;
}

.allNot {
  height: 64rpx;
  /* border: 1px solid rgba(229, 229, 229, 1); */
  opacity: 1;
  border-radius: 6rpx;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
  min-width: 144rpx;
  text-align: center;
}

.change {
  display: flex;
  align-items: center;
}

.change image {
  width: 38rpx;
  height: 38rpx;
}

.current {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.allBtns {
  display: flex;
  justify-content: space-between;
  margin: 38rpx 0;
}

.area {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.area text {
  display: inline-block;
  min-width: 24%;
  box-sizing: border-box;
  text-align: center;
  margin-bottom: 32rpx;
}

.forItem {
  padding: 32rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}

.range text {
  display: inline-block;
  width: 25%;
  text-align: center;
  margin-top: 64rpx;
}

.self {
  margin: 36rpx 0;
}

.bySelf {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.bySelf input {
  display: inline-block;
  width: 144rpx;
  height: 64rpx;
  border: 1px solid rgba(229, 229, 229, 1);
  border-radius: 6rpx;
  padding: 0 6rpx;
  overflow: scroll;
}

.line {
  padding: 0 32rpx;
}

.tabSel {
  color: #08f;
}

.triRotate {
  border-color: #08f !important;
  transform: rotate(-45deg) !important;
  transition: all ease 500ms;
}

.theMask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.hook {
  /* color:#08f; */
}

.rangeSel {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: rgba(0, 136, 255, 1);
  opacity: 1;
  border-radius: 6rpx;
  color: #fff;
  width: 144rpx;
}

.rangeNot {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  opacity: 1;
  width: 144rpx;
}

.chanText {
  line-height: 1;
}
