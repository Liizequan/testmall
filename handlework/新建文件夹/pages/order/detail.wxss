/* 顶部状态栏 */

.detail-header {
  position: relative;
  width: 100%;
  height: 140rpx;
}

.detail-header .header-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-header .header-backdrop image {
  display: block;
  width: 750rpx;
  height: 140rpx;
}

.header-state {
  padding: 0 50rpx;
}
.mask {
  display: flex;
  align-items: center;
  perspective: 900rpx;
  position:absolute;
  width:100%;
  height: 100%;
  left:0;
  top:0;
  box-sizing: border-box;
}
.mask .bg{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  z-index: 1;
}
.parent:hover{
  transform:rotateY(180deg);
}
.parent {
  width: 654rpx;
  height: 792rpx;
  margin: 0 auto;
  transform-style: preserve-3d;
  transform:rotateY(0deg);
  transition:all 1s;
  position:relative;
  text-align: center;
  z-index: 2;
}
.face{
  display: flex;
  justify-content: center;
  align-items: center;
  backface-visibility:hidden;
  height: 100%;
  position:absolute;
  top:0;
  left:0;
  width: 100%;
}
.back {
  transform: rotateY(180deg);
  backface-visibility:hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  position:absolute;
  top:0;
  left:0;
  width: 100%;
}
.back image{
  width:100%;
  height: 100%;
}
.price_name{
  position:absolute;
  top:210rpx;
