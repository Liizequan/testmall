/* 快捷导航 */

.shortcut {
  position: fixed;
  right: 12px;
  bottom: 14rpx;
  width: 76rpx;
  height: 76rpx;
  line-height: 1;
  z-index: 5;
  border-radius: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.shortcut image {
  width: 50%;
  height: 70%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 50%;
}
.nav-item {
  position: absolute;
  left: 0;
  top: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  /* line-height: 76rpx; */
  color: #fff;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  /* text-align: center; */
  transform: rotate(0deg);
  opacity: 0;
}
.chat {
  bottom: 200rpx;
}

