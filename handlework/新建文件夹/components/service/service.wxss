
.mask {
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 99;
}

.serCon {
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
  width: 100%;
}

.phone, .contact {
  height: 84rpx;
  background: #fff;
  border-bottom: 2rpx solid #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.contact {
  border-bottom: 12rpx solid #eee;
}

.cancel {
  height: 84rpx;
  line-height: 84rpx;
  background: #fff;
}

.serveBtn {
  position: absolute;
  width: 100% !important;
  height: 100%;
  border: none;
  left: 50%;
  transform: translateX(-50%);
  opacity: 0;
}
