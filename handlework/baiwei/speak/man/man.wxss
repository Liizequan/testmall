.touching {
  animation: myani 1s infinite;
}
@keyframes myani{
  0%{
    transform: scale(0.96);
  }
  50%{
    transform: scale(1);
  }
  100%{
    transform: scale(0.96);
  }
}
.speakbtn image {
  width: 44rpx;
  height: 64rpx;
}

.closebtn {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  bottom: 58rpx;
  left: 50rpx;
}

.progress {
  background: #f5f5f5;
  height: 56rpx;
  border-radius: 28rpx;
  overflow: hidden;
}

.currentprogress {
  background: #ed2727;
  height: 100%;
}

.emotioncon {
  background: #fff;
  padding: 20rpx;
  height: 300rpx;
  width: 100%;
  overflow: scroll;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content: space-between;
}

.emotioncon image {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
}

.scrollcon {
  float: left;
  width: 100%;
}
