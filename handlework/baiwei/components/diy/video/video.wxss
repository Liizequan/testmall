/* 视频组 */

.diy-video video {
  width: 100%;
  display: block;
}
.content{
  width: 93%;
  height: 85%;
  margin: 10rpx auto;
  background: #ffffff;

}

.zan-noticebar {
  display: -webkit-box;
  display: flex;
  font-size: 32rpx;
  line-height: 1.2;
  text-indent: 5px;
  font-weight: bolder;
  
}
.title_box{
  width: 100%;
}
.title_box .left{
  float: left;
  width: 50%;
  text-indent: -5rpx;
}
.title_box .right{
  float: right;
  width: 35%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.title_box .right view{
  display: block;
  width: 50rpx;
  height: 50rpx;
  background: red;
  color: white;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 6rpx;
}

.title_box .right view:first-child {
  display: block;
  width: auto;
  padding: 2rpx 6rpx;
  text-indent: 2rpx;
}

.goods{
  width: 100%;
  height: 300rpx;

}
.goods image{
  width: 100%;
  height: 100%;
}
.goods_name{
display: -webkit-box;
word-break: break-all;
text-overflow: ellipsis;
overflow: hidden;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
padding: 10rpx 0;
}
.goods_price{
  color: gray;
  font-size: 26rpx;

}
.goods_price text{
  color: gray;
  font-size: 26rpx;
  text-decoration:line-through;
}
.goods_buy{
  display: flex;
  height: 60rpx;
 
}
.goods_buy .left{
  width: 50%;
  color: #de2727;
  font-size: 38rpx;
  display: inline-block;
  
}
.goods_buy .right{
  width: 50%;
  display: flex;
  justify-content: space-around;
}
.goods_buy .right text{
  color: gray;
font-size: 26rpx;


}
.goods_buy .right navigator{
  background: #de2727;
  color: white;
  padding: 10rpx 20rpx; 
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateY(-20rpx)
}