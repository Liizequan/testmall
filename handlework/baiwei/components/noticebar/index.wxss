.zan-noticebar {
  display: -webkit-box;
  display: flex;
  font-size: 32rpx;
  line-height: 1.2;
  font-weight: bolder;

}

.zan-noticebar--within-icon {
  position: relative;
  padding-right: 30px;
}

.zan-noticebar__left-icon {
  height: 18px;
  min-width: 20px;
  padding-top: 1px;
  box-sizing: border-box;
}

.zan-noticebar__left-icon>image {
  width: 16px;
  height: 16px;
}

.zan-noticebar__right-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 15px;
  line-height: 1;
}

.zan-noticebar__content-wrap {
  position: relative;
  -webkit-box-flex: 1;
  flex: 1;
  height: 25px;
  overflow: hidden;
}

.zan-noticebar__content {
  position: absolute;
  white-space: nowrap;
  padding-top: 6rpx;

}
