/* pages/card/addCard/addCard.wxss */
.add-card{
  font-size:26rpx;
}
.card-user{
  padding:60rpx 40rpx 40rpx;
  position: relative;
}
.card-bg {
  width:670rpx;
  margin:auto;
  height: 415rpx;
  background-color: pink;
  border-radius: 16rpx;
}
.card-bg image{
  width:670rpx;
  height: 415rpx;
  display: block;
}
/* 名片信息 */
.card-text{
  position: absolute;
  top:50%;
  color:#fff;
  width:670rpx;
  z-index:50;
  text-align: center;
  transform: translateY(-50%);
}
/* 未选中 */
.user-logo{
  display: flex;
  font-size: 34rpx;
  flex-direction: column;
  justify-content: center;
  margin-top:-30rpx;
}
.user-logo view{
  width:114rpx;
  height: 114rpx;
  margin:auto;
  margin-top:20rpx;
  padding:20rpx;
  border-radius: 50%;
  /* background: #E5E5E5; */
}
.user-logo image{
  width:100%;
  height:100%;
  display: inline-block;
  border-radius: 40%;
}
/* 选中 */
.user-logo .add-user-logo{
  width:154rpx;
  height: 154rpx;
  padding:0;
}
.add-user-logo image{
  /* width:134rpx;
  height: 134rpx; */
  border-radius: 50%;
}

.user-logo text{
  display: inline-block;
  padding-top:20rpx;
  font-weight:bold;
}
.user-logo .small{
  font-weight: 400;
  font-size: 26rpx;
}
/* 名片名称 */
.card-info{
  background-color: #fff;
  margin: 40rpx;
  border-radius: 16rpx;
  padding-bottom: 40rpx;
}
.card-info-list {
  display: flex;
  justify-content: space-between;
  align-self: center;
  margin:0rpx 40rpx;
  padding:30rpx 0; 
  color: #333333;
  border-bottom: 1px solid #E5E5E5;
}
.card-info-list text{
  display: flex;
  align-self: center;
}
/* 未选择图片的效果 */
.card-info-list .info-image{
  width: 86rpx;
  height: 86rpx;
  padding:20rpx;
  border-radius: 50%;
  background: #E5E5E5;
}
.card-info-list view image{
  width: 100%;
  height: 100%;
  border-radius: 45%;
}

/* 选择图片的效果 */
.card-info-list .add-info-image{
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
}
.card-info-list .add-info-image image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.card-info-list .info-input{
  flex: 1;
  text-align: right;
  margin-left:20rpx;
}
/* 简介 */
.card-info-synopsis{
  display: flex;
  flex-direction: column;
  padding:0 40rpx;
}
.card-info-synopsis text{
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
}
.card-info-synopsis view{
  padding:18rpx 10rpx;
  height: 200rpx;
  background-color:#EEEEEE;
}
.card-info-synopsis textarea{
  width:100%;
  height: 100%;
}
.add-card .btn{
  margin:40rpx;
}
