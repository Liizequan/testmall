/* pages/card/card.wxss */
.scroll{
  position: absolute;
  top:0;
  height:100vh;
}
.card{
  padding:41rpx;
  color: #999999;
  font-size: 26rpx;
}
.card-user{
  border-radius: 16rpx;
  position: relative;
  background-color: #fff;
  box-shadow:0px 4px 16px 0px rgba(0, 0, 0, 0.12);
}
.card-bg {
  width:670rpx;
  height: 415rpx;
  /* background-color: pink; */
  border-radius: 16rpx;
}
.card-bg image{
  position: absolute;
  top:0;
  left:0;
  z-index:10;
  width:670rpx;
  height: 415rpx;
  display: block;
}
.card-text{
  position: absolute;
  top:0;
  color:#fff;
  width:100%;
  z-index:50;
}
.user-share{
  text-align: right;
}
.user-share button{
    display: inline-block;
    height:70rpx;
    background: transparent;
}
.user-share image{
  width:44rpx;
  height: 44rpx;
}
.user-logo{
  text-align: center;
  display: flex;
  font-size: 34rpx;
  flex-direction: column;
  justify-content: center;
  margin-top:-30rpx;
}
.user-logo image{
  width:148rpx;
  height: 148rpx;
  border-radius: 50%;
}
.user-logo text{
  display: inline-block;
  padding-top:20rpx;
}
.user-glory{
  padding:41rpx;
  display: flex;
  flex-direction: column;
  /* flex-wrap:wrap; */
  font-weight:400;
}
.user-glory>view{
  flex-direction: row;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
}
.user-glory text{
  display: inline-block;
  flex: 1;
  height:32rpx;
  overflow:hidden;
  text-align: right;
  padding-right:25rpx;
}
.user-glory text:nth-child(2){
  text-align: left;
  padding-left:25rpx;
}
.touch{
  padding:41rpx;  
}
.touch view{
  display: flex;
  justify-content: space-between;
  align-self: center;
}
.touch .red{
  color: #ED2727;
  border:1px solid #ED2727;
  display: inline-block;
  padding:8rpx 18rpx;
  font-size: 22rpx;
  margin:10rpx 0;
  border-radius:3px;
}
/* 简历 */
.card-CV{
  border-radius: 16rpx;
  position: relative;
  padding:30rpx 40rpx;
  margin-top:40rpx;
  background-color: #fff;
  box-shadow:0px 4px 16px 0px rgba(0, 0, 0, 0.12);
}
.cv-header{
  color: #353535;
  font-size: 34rpx;
  font-weight:bold;
}
.cv-title {
  transition: all 1s linear;
}
.cv-title view{
  margin-top:20rpx;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  /* -webkit-line-clamp:2; */
  overflow:hidden;
}
.zhangkai text{
  color:#4E526F;
}
.cv-btn{
  display: flex;
  padding-top:26rpx;
  justify-content: space-between;
}
.cv-btn button{
  width:250rpx;
  height: 70rpx;
  margin:0;
  line-height: 70rpx;
}
.add-user-logo {
  height: 98rpx; 
  text-align:center; 
  line-height:110rpx; 
  width: 98rpx; 
  border-radius:50%; 
  background: #ED2727;
  z-index:500;
}
.add-user-logo image{
  width:65rpx;
}