.order{
  font-size: 26rpx;
  color: #888888;
  height: 100%;
}
/* 公共部分 */
.header,.center,.footer{
  background-color: #fff;
}
.header{
  padding:40rpx;
}
.order-top text{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}
.order-top view{
  color: #353535;
  font-size:30rpx;
  font-weight:bold;
}
.order-shadow{
  margin:40rpx 0;
  border-radius:10rpx;
  display: flex;
  box-shadow:0px 4rpx 14rpx 0px rgba(0, 0, 0, 0.12);
}
.order-shadow view{
  display: flex;
  flex: 1;
  flex-direction: column;
  text-align: center;
  margin:40rpx;
}
.order-shadow view+view{
  border-left:1px solid #E5E5E5;
}
.order-shadow view text{
  color: #ED2727;
  font-weight:bold;
}
/* 列表 */
.order-between view{
  display: flex;
  height: 68rpx;
  line-height: 68rpx;
  border-bottom: 1px solid #E5E5E5;
  justify-content: space-between;
}
.order-between view view,.footer view{
  color: #353535;
}
/* 管理人 */
.center{
  margin:10rpx 0;
  padding: 0 40rpx;
}
.center view{
  border-bottom: 0;
}
/* 投向 */
.footer{
  padding:40rpx 40rpx;
}
.footer view{
  padding-top:10rpx;
}
.order-auto{
  color: #353535;
  padding:40rpx;
}
.order-auto .kuang{
  color:#999;
  height: 46rpx;
  line-height: 46rpx;
}
/* 预约 */
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  font-size: 30rpx;
}
.btn button{
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 0;
  font-size: 30rpx;
  font-weight:500;
}
.order-hide{
  position: fixed;
  top:0;
  left:0;
  width:100%;
}
.bg{
  width:100%;
  height:100vh;
  background-color: #000;
  opacity: 0.5;
  z-index:50;
}
.order-kuang{
  position: absolute;
  top:50%;
  left:50%;
  z-index:100;
  width:670rpx;
  color: #888888;
  font-size: 26rpx;
  background: #fff;
  border-radius:16rpx;
  transform: translate(-50%,-50%);
}
.kuang-center{
  padding:40rpx;
  text-align: center;
}
.kuang-center text{
  font-size: 34rpx;
  color: #333333;
  font-weight:bold;
}
/* 表格 */
.kuang-input{
  padding:20rpx 40rpx;
}
.kuang-input view{
  display: flex;
}
.kuang-input view text{
  align-self: center;
}
.kuang-input view input{
  flex: 1;
  font-size: 26rpx;
  padding:20rpx;
  margin-left:20rpx;
  border-bottom:1px solid #E5E5E5;
}
.submit{
  margin:100rpx;
}
.submit button{
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
}