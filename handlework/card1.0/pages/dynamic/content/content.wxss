/* pages/dynamic/content/content.wxss */
.hearder{
  color: #666666;
  font-size: 26rpx;
  background-color: #fff;
  padding:40rpx;
  padding-bottom: 40rpx;
}
.hearder-title{
  font-size: 30rpx;
  font-weight:500;
  color: #353535;
}
.hearder-comtime{
  display: flex;
  padding:40rpx 0;
  color: #999999;
  justify-content: space-between;
}
.rich{
  padding-bottom: 40rpx;
}
.bettwen{
  display: flex;
  color: #999999;
  font-size: 22rpx;
  align-self: center;
  justify-content: space-between;
}
.share {
  display: flex;
  flex-direction:row;
  align-self: center;
}
.share button{
  background: transparent;
  border:0;
  border-radius: 50%;
  width:30rpx;
  height: 30rpx;
  position: relative;
}
.share image{
  width: 27rpx;
  height: 27rpx;
  display: flex;
  position: absolute;
  left:10%;
  top:50%;
  transform: translate(-50%,-50%);
  align-self: center;
  margin-left:20rpx;
}