/* pages/mine/mine.wxss */
.mine-bg{
  margin:40rpx;
  position: relative;
}
.mine-bg image{
  width: 100%;
  height: 338rpx;
  display: inline-block;
}
.user{
  position: absolute;
  top:30%;
  left:50%;
  color: #FFFFFF;
  font-size: 26rpx;
  text-align: center;
  transform: translate(-50%,-30%)
}
.user image{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:10rpx solid rgba(255,255,255,0.2);
}
.user text{
  display: block;
  padding:10rpx;
}
.mine-list{
  margin:0 41rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
}
.mine-list navigator{
  display: flex;
  color: #353535;
  font-size:26rpx;
  padding:30rpx;
  border-bottom: 1px solid #E5E5E5;
  justify-content: space-between;

}
.mine-list image{
  width:12rpx;
  height: 20rpx;
  display: flex;
  align-self: center;
}
.mine-list .number{
  position: relative;
}
.mine-list .number text{
  position: absolute;
  display: inline-block;
  top:50%;
  right: 0rpx;
  font-size: 20rpx;
  background-color: #ED2727;
  color: #fff;
  transform: translateY(-50%);
  width:40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
}

/* 预约 */
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width:100%;
  font-size: 30rpx;
}
.btn button{
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 0;
  font-size: 30rpx;
  font-weight:500;
}
.order-hide{
  position: fixed;
  top:0;
  left:0;
  width:100%;
}
.bg{
  width:100%;
  height:100vh;
  background-color: #000;
  opacity: 0.5;
  z-index:50;
}
.order-kuang{
  position: absolute;
  top:50%;
  left:50%;
  z-index:100;
  width:670rpx;
  color: #888888;
  font-size: 26rpx;
  background: #fff;
  border-radius:16rpx;
  transform: translate(-50%,-50%);
}
.kuang-center{
  padding:40rpx;
  text-align: center;
}
.kuang-center text{
  font-size: 34rpx;
  color: #333333;
  font-weight:bold;
}
/* 表格 */
.kuang-input{
  padding:20rpx 40rpx;
}
.kuang-input view{
  display: flex;
}
.kuang-input view text{
  align-self: center;
}
.kuang-input view input{
  flex: 1;
  font-size: 26rpx;
  padding:20rpx;
  margin-left:20rpx;
  border-bottom:1px solid #E5E5E5;
}
.submit{
  margin:100rpx;
}
.submit button{
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
}