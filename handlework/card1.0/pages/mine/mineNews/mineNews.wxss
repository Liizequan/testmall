/* pages/mine/mineNews/mineNews.wxss */

.list{
  padding:20rpx 40rpx;
  background: #fff;
  margin:40rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 10rpx 0 #DBDBDB;
}
.user-info {
  color:#333;
  font-size: 26rpx;
  display: flex;
  align-self: center;
  margin:20rpx 0 40rpx;
  justify-content: space-between
}
.user-info text{
  flex:1;
  display: inline-block;
  padding-left: 20rpx;
}
.user-info image{
  width:90rpx;
  height: 90rpx;
  border-radius: 5rpx;
  align-self: center;
}
.user-info image.right{
  width:18rpx;
}
.list .user-text{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list .user-text view{
  margin:20rpx 0 10rpx;
  position: relative;
}
/* 图片样式 */
.my-licaishi-img{
  display: flex;
  flex-wrap: wrap;
  padding-top:40rpx;
  justify-content: space-between;
}
.lu-image{
  width:180rpx;
  height: 180rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
}
.fa-img .lu-image:nth-child(2),
.fa-img .lu-image:nth-child(5),
.fa-img .lu-image:nth-child(8){
  display: inline-block;
  margin:0 25rpx;
}
.lu-image image{
  width:180rpx;
  height: 180rpx;
}