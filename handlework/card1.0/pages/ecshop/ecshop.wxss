/* pages/ecshop/ecshop.wxss */
page{
  background-color: #F5F5F5;
  padding:40rpx 0 20rpx;
}
.banner swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
/* 精选推荐 */
.fine{
  margin-top:20rpx;
}
.news-title{
  color:#353535;
  font-size: 34rpx;
  font-weight:bold;
  padding:41rpx 40rpx;
  border-bottom:1px solid #E5E5E5;
  background-color: #fff;
}
.news-title view{
  display: inline-block;
  padding-left:20rpx;
  border-left: 4rpx solid red;
}
.fine-user{
  padding:40rpx 41rpx;
  margin-bottom:10rpx;
  background-color: #fff;
}
.fine-user:last-child{
   margin-bottom:0rpx;
}
.user-name{
  color: #353535;
  font-size: 30rpx;
  font-weight:bold;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-self: center;
}
.user-name view{
  display: flex;
  align-self: center;
}
.user-name text{
  display: flex;
  align-self: center;
  border-radius: 6rpx;
  color: #ED2727;
  font-size: 20rpx;
  font-weight: 400;
  border:1px solid #ED2727;
  padding:3rpx 10rpx;
  margin-left:20rpx;
}
.user-name image{
  width:12rpx;
  height: 20rpx;
}
.user-info{
  display: flex;
  font-size: 26rpx;
  color:#888888;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
}
.user-info>view{
  padding-top:20rpx;
}
.info-list view{
  color: #353535;
  padding:10rpx 0;
}
.fint-surplus{
  display: flex;
  padding-top:20rpx;
  justify-content: space-between;
  color: #888888;
  font-size: 26rpx;
}
.red{
  color: #ED2727;
}