/* pages/component/rader/mine.wxss */
.mine{
  background: #fff;
  padding:40rpx;
}
.card{
  box-shadow: 0rpx 0rpx 15rpx 0rpx #D8D8D8;
}
.card-top{
display: flex;
  padding:20rpx 0;
  margin:0 20rpx;
  border-bottom: 1px dotted #F0F0F0;
  justify-content: space-between;
}
.card-logo image{
  width:120rpx;
  height: 120rpx;
  /* background: pink; */
  border-radius: 50%;
  margin-right: 20rpx;
  align-self: center;
}
.card-name{
  display: flex;
  flex-direction: column;
  align-self: center;
  flex: 1;
  color:#9F9F9F;
  font-size: 26rpx;
}
.card-name .name{
  font-size: 30rpx;
  color: #484848;
}
.card-edit{
  display: flex;
  align-self: center;
}
.card-edit-yes{
  display: flex;
  font-size: 24rpx;
  color: #7C7C7C;
  border: 1px solid #D8D8D8;
  border-radius: 30rpx;
  padding:0 20rpx;
  margin-right: 20rpx;
}
.card-edit  .card-edit-yes image{
  width:35rpx;
  height: 30rpx;
  margin-right: 10rpx;
  align-self: center;
}
.card-edit-yes text{
  align-self: center;
}
.card-edit image{
  width: 20rpx;
  height: 20rpx;
  /* background: orange; */
}
.card-bottom {
  display: flex;
  padding:20rpx;
  font-size: 24rpx;
  color: #7C7C7C;
  justify-content: space-between;
}
.card-bottom text{
  align-self: center;
}
.card-bottom image{
  width:45rpx;
}
/* hen */
.transverse{
  padding-top:20rpx;
  display: flex;
  color: #606062;
  font-size: 24rpx;
  text-align: center;
  justify-content: space-around;
}
.transverse image{
  width:60rpx;
  height: 60rpx;
  /* background: peachpuff; */
  margin:10rpx 0;
}
/* su */
.about-mine{
  display: flex;
  flex-direction: column;
  background: #fff;
  color:#565654;
  font-size: 26rpx;
  margin:20rpx 0;
}
.about-mine .list{
  margin:0 40rpx;
  padding:25rpx 0;
  display: flex;  
  justify-content: space-between;
  border-bottom:1px solid #F7F7F9;
}
.about-mine .list view{
  align-self: center;
}
.about-mine .list .list-left{
  border-radius: 50%;
}
.about-mine image{
  width:60rpx;
  height: 60rpx;
  /* background: #03BF21; */
}
.about-mine .logo-right{
  width:16rpx;
}
.about-mine text{
  align-self: center;
  flex: 1;
  justify-content: left;
}
/* 弹框 */
.kuang{
  position: absolute;
  top:0;
  left: 0;
  width:100%;
  height: 100vh;
  background: rgba(0, 0, 0, .4);
}
.kuang image{
  top:50%;
  left:50%;
  position: absolute;
  transform: translate(-50%,-50%);
  width:300rpx;
  height: 300rpx;
  border:1px solid #91918b;
  padding:20rpx;
}
